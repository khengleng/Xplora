# Database
DATABASE_URL=postgresql://user:password@localhost:5432/xplora?sslmode=require

# HashiCorp Vault
# Set to "true" to enable Vault for encryption/decryption
VAULT_ENABLED=false
VAULT_ADDR=http://localhost:8200
VAULT_ROLE_ID=your-role-id
VAULT_SECRET_ID=your-secret-id
VAULT_NAMESPACE=root

# Fallback Encryption Key (used when Vault is disabled or unavailable)
# Generate with: openssl rand -base64 32
ENCRYPTION_MASTER_KEY=your-encryption-key-here

# NextAuth
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000

# Session
SESSION_TIMEOUT_MINUTES=15
ACCESS_GRANT_DURATION_MINUTES=30
